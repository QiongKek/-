page {
    width: 100%;
    height: 100%;
    background: #f4f4f4;
}

.btn-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.btn {
    background: #35B4AB;
    color: #f4f4f4;
}

.card {
    width: 500rpx;
    height: 500rpx;
    border-radius: 50rpx;
    display: flex;
    flex-direction: row;
    box-shadow: 0 1px 2px rgba(34,25,25,0.1);
    background: #fff;
    justify-content: center;
    align-items: center;
}

.user-container {
    width: 100%;
    background: #f4f4f4;
}

.user {
    margin: 20rpx;
    height: 400rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    background: #a5e0da;
    color: #1f8b81;
    align-items: center;
}

.getmoney {
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.usertips {
    font-size: 22rpx;
}

.userbtn {
    border-radius: 20rpx;
    background: #35B4AB;
    color: #fff;
    box-shadow: 0 1px 2px rgba(34,25,25,0.1);
    padding: 10rpx 20rpx;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    display: flex;
    font-size: 28rpx;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.detail-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 100%;
    border-bottom: 1rpx solid #f4f4f4;
    justify-content: flex-start;
}

.detail {
    width: 100%;
    height: 120rpx;
}

.detailleft {
    margin: 50rpx 10rpx;
    padding-left: 30rpx;
    border-right: 1rpx solid #f4f4f4;
    padding-right: 30rpx;
}

.detailright {
    margin-left: 40rpx;
}

.userbtn image {
    width: 30rpx;
    box-shadow: 0 1px 2px rgba(34,25,25,0.1);
    margin-right: 10rpx;
    border-radius: 100%;
    height: 30rpx;
}

.user-icon {
    width: 100rpx;
    height: 100rpx;
}

.user-icon image {
    width: 100%;
    height: 100%;
    border-radius: 100%;
}

.userdata {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin: 40rpx;
    align-items: flex-start;
}

.username {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20rpx;
}

.userphone {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.name {
    font-size: 35rpx;
}

.change {
    margin-left: 20rpx;
    background: #1f8b81;
    color: #fff;
    padding-left: 20rpx;
    padding-right: 20rpx;
    font-size: 20rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 35rpx;
    height: 35rpx;
}

.userphone image {
    width: 35rpx;
    margin-right: 10rpx;
    height: 35rpx;
}

.studentimg {
    width: 100rpx;
    border-radius: 20rpx;
    height: 100rpx;
}

.cards {
    margin: 20rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    box-shadow: 0 1px 2px rgba(34,25,25,0.1);
    position: relative;
}

.list-container {
    margin: 20rpx;
    display: flex;
    flex-direction: row;
    padding-bottom: 30rpx;
    padding-top: 10rpx;
    border-bottom: 0.5rpx solid #f4f4f4;
    font-size: 30rpx;
    justify-content: space-between;
}

.admin {
    margin: 20rpx 30rpx;
}

.admin-container {
    width: 100%;
    height: 100%;
}

.navimg {
    width: 50rpx;
    height: 50rpx;
}

.myedit {
    width: 40rpx;
    height: 40rpx;
    right: 20rpx;
    position: absolute;
}
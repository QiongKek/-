.page {
    height: 100Vh;
    width: 100vw;
}

.topView {
    width: 100%;
    height: 100rpx;
    display: flex;
    font-size: 30rpx;
    font-weight: 500;
    background-color: #ffffff;
    border-bottom: 1px solid #e2e1e1;
}

.topChild {
    flex: 1;
    height: 100rpx;
    text-align: center;
    line-height: 3.4;
    font-size: 14px;
    color: #333333;
}

.active {
    color: #35B4AB;
    border-bottom: 2px solid #35B4AB;
}

.swiper-box {
    width: 100%;
    margin-top: 100rpx;
    height: 100000000rpx;
}

.page.show {
    overflow: hidden;
}

.switch-sex::after {
    content: "\e716";
}

.switch-sex::before {
    content: "\e7a9";
}

.switch-music::after {
    content: "\e66a";
}

.switch-music::before {
    content: "\e6db";
}

.addbtn {
    position: fixed;
    bottom: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 100%;
}

.textdetail {
    height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
}

.loadmore {
    background: #35B4AB;
    margin-top: 40rpx;
    margin-bottom: 100rpx;
    border-radius: 40rpx;
    color: #fff;
}

.mybanner {
    margin-left: 40rpx;
    font-size: 20rpx;
    color: orange;
}

.beizhu {
    display: flex;
    flex-direction: column;
}

.repairitem {
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid rgb(223,217,217);
    margin: 10rpx;
    padding-bottom: 20rpx;
    justify-content: space-between;
    background: #fff;
}

.usercontiner {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.deal {
    color: #fff;
    background: #f1eded;
    text-shadow: 1px 1px 1px #000,-1px -1px 1px #fff;
    height: 150rpx;
    border-radius: 25rpx;
    box-shadow: 0 5px 10px rgba(0,0,0,0.2);
    margin-right: 10rpx;
    width: 60rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.myaction {
    direction: flex;
    flex-direction: column;
}